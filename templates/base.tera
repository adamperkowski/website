{% block title %}{% endblock %}
{% if title %}
  {% set title = title ~ " - adam" %}
{% else %}
  {% set title = "adam" %}
{% endif %}
{% block description %}{% set description = "welcome to my website :3 i'm an indie software developer from Poland doing some cool stuffs on the internet :>" %}{% endblock %}
{% block noindex %}{% endblock %}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="color-scheme" content="dark">
    <meta name="darkreader-lock">

    {% if noindex %}
      <meta name="robots" content="noindex, follow">
    {% else %}
      <meta name="robots" content="index, follow">
    {% endif %}

    <title>{{ title }}</title>
    <meta name="title" content="{{ title }}">
    <meta name="description" content="{{ description }}">
    <meta name="author" content="adam perkowski">
    {# <meta name="theme-color" content="#b4befe"> #}

    <link rel="canonical" href="{{ canonical }}">
    <link rel="stylesheet" href="/static/styles.css">
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico" sizes="32x32 64x64 96x96 128x128 256x256">

    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:locale" content="en_US">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ canonical }}">
    <meta property="og:site_name" content="adam perkowski">
    <meta property="og:image" content="{{ host }}/img/mimi-banner.gif">
    <meta property="og:image:type" content="image/gif">
    <meta property="og:image:width" content="496">
    <meta property="og:image:height" content="32">
    <meta property="og:image:alt" content="mimi the car running around">

    <script>{% include "partials/main.js" %}</script>
    <script type="application/ld+json">{% include "partials/schema.json" %}</script>
  </head>

  <body>
    <script src="/static/oneko.js" data-cat="img/mimi-oneko.gif" async></script>

    <div id="sidebar">
      {% include "partials/sidebar.tera" %}
    </div>

    <div id="content">
      <div id="main">
        {% block main %}{% endblock %}
      </div>

      <div id="footer">
        <p>Copyright (c) 2025 Adam Perkowski</p>
      </div>
    </div>
  </body>
</html>

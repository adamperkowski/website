{% block noindex %}{% set noindex = true %}{% endblock %}

{% block main %}
  <!-- hell yeah it's 1.5rem because of line-height -->
  <p style="height: calc(92px - 1.5rem);">
    page under construction :c
    <br>
    come back later!!
  </p>

  <img
    src="/img/gifs/under-construction.gif"
